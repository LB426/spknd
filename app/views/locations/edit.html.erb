<% content_for(:menu) do %>
	<%= render :partial => 'profiles/menu' %>
<% end %>

<div class="container_16">
  <div class="grid_13 alpha">
    
    <h1>Изменить населённый пункт</h1>

    <% form_for(@location) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :form %><br />
        <%= f.text_field :form %>
      </p>
      <p>
        <%= f.submit 'Update' %>
      </p>
    <% end %>

    <%= link_to 'Показать', @location %> |
    <%= link_to 'Назад', locations_path %>

  </div>
  <%= render :partial => 'profiles/rmenu' %>
</div>