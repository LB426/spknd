<% content_for(:menu) do %>
	<%= render :partial => 'menu' %>
<% end %>

<div class="container_12">
	<div class="grid_3">
		<p>&nbsp;</p>
	</div>
	<div class="grid_7">
		<h1>Внимание!<h1>
		<h1>Вы хотите активировать учётную запись.</h1>
		<% form_for @user, :url => activate_path(@user.id), :html => { :method => :post } do |form| %>
		  	<%= form.error_messages %>
		  	<%= render :partial => "form", :locals => { :form => form }%>
		  	<%= form.submit "Активировать" %>
		<% end %>
	</div>
	<div class="grid_2">
		<p>&nbsp;</p>
	</div>
	<div class="clear"></div>
</div>