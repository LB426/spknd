<% content_for(:menu) do %>
	<%= render :partial => 'menu' %>
<% end %>
<div class="container_12">
	<div class="grid_3">&nbsp;</div>
	<div class="grid_7">
		<% form_for @user_session do |f| %>
			<%= f.error_messages %>
			<p>
				<%= f.label(:title, "Имя для входа :", :class => "mylabelstyle") %><br />
				<%= f.text_field :username, :class => "myinputstyle" %>
			</p>
			<p>
				<%= f.label(:title, "Пароль :", :class => "mylabelstyle") %><br />
				<%= f.password_field :password, :class => "myinputstyle" %>
			</p>
			<p>
				<%= f.check_box :remember_me %><%= f.label :запомнить_меня %><br />
			</p>
			<p><%= f.submit "Войти" %></p>
		<% end %>

<p><%= link_to "Забыл пароль?", new_password_reset_path %><br />
<%= link_to "Зарегистрировать нового пользователя", new_user_path %></p>

	</div>
	<div class="clear"></div>
</div>